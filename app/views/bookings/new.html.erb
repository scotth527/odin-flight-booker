<h1 class="mt-5">Book your flight </h1>

<% if @flight && params[:passengers] %>
    <div class="mt-5">
        <h3>Flight</h3>
        <div>
            <div class="d-flex justify-content-between mb-5">
                <div><strong>From: </strong><%= @flight.from_airport.airport_code %> </div>
                <div><strong>To: </strong><%= @flight.to_airport.airport_code %> </div>
                <div><strong>Date Time: </strong><%= @flight.start_datetime.strftime("%m/%d/%Y") %> </div>
            </div>
        </div>
        <h3>Number of Passengers:  <%= params[:passengers] %></h3>
        <%= render partial: 'booking_form', locals: {search_results: @search_results, passengers: params[:passengers]} %>
    </div>

<% else %>
<div>
    Flight was not selected. Please return to select a flight.
</div>
<!-- This is used to to return the user to the previous url.  -->
<%= link_to 'Return to select flight', :back %>

<% end %>
