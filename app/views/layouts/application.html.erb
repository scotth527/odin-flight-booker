<!DOCTYPE html>
<html>
  <head>
    <title>OdinFlightBooker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-dark bg-dark justify-content-between pl-3 pr-3">
       <%= link_to "Odin Flight Booker", root_path , {class:"navbar-brand"} %>

       <div class="d-flex ">

           <%= link_to 'Search Flights', flights_path, class:"btn btn-outline-success my-2 my-sm-0 mr-2" %>           

       </div>
     </nav>

    <% if notice %>
        <div class="alert alert-success" role="alert">
            <%= notice %>
        </div>
    <% end %>

    <% if alert %>
        <div class="alert alert-danger" role="alert">
            <%= alert %>
        </div>
    <% end %>

    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
